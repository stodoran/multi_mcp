# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf

# Markdown and documentation
*.md text eol=lf
*.txt text eol=lf

# Config files
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Shell scripts
*.sh text eol=lf

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
